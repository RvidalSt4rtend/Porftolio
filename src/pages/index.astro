---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import Section from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Projects from "../components/Projects.astro";
import Code from "../components/icons/Code.astro";
import Profile from "../components/profile.astro";
import Courses from "../components/Courses.astro";
import Certificate from "../components/icons/Certificate.astro";
---

<Layout
  title="Portfolio de Richard Vidal - Desarrollador y Programador Web con 2 aÃ±os de experiencia "
  description="Contrata a Richard como Python Developer :D"
>
  <main class="px-4">
    <Section class="py-16 md:py-36">
      <Profile>
        <slot />
      </Profile>
    </Section>
    <div class="space-y-24">
      <Section id="experiencia">
