        <Experience />
      </Section>

      <Section id="proyectos">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
          <Code class="size-7" />
          Proyectos
        </h2>
        <Projects />
      </Section>

      <Section id="cursos">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
          <Certificate class="size-7" />
          Cursos
        </h2>
        <Courses />
      </Section>
    </div>
  </main>
</Layout>
