---
const personalImageAlt = "Richard Vidal"
import Badge from "../components/Badge.astro"
import LinkedInIcon from "../components/icons/LinkedIn.astro"
import MailIcon from "../components/icons/Mail.astro"
import SocialPill from "../components/Social.astro"
import Github from "./icons/Github.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/projects/profile.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/richard-vidal-appsec/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, soy Richard Vidal
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-400 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300 text-pretty">
     <strong>Bachiller en Ingenieria de Sistemas </strong
    >, <b>+2 años de experiencia</b>  Apasionado por el Desarrollo de Aplicaciones Web y la Ciberseguridad. Lima, Peru
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:rvidal@st4rtend.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/richard-vidal-appsec/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/RvidalSt4rtend">
      <Github class="size-4" />
      Github
    </SocialPill>
  </nav>
</div>
